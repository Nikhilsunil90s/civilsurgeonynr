                        </textarea>
                        <script>
                            $('textarea').val('')
                        </script>
                        <input type="submit" value="Upload Gallery!" class="btn btn-success mt-2 form-control gallery-upload-button">
                    </form>
                </div>
            </div>
        </div>
    </section>

<div style="margin-top: 200px;;">
